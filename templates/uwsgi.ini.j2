#---------------------------------------------------------------------------
# uwsgi config for {{ name }} service
# {{ ansible_managed }}
#---------------------------------------------------------------------------
[uwsgi]
plugin = python
socket = {{ aedir_rundir }}/uwsgi/{{ name }}/{{ name }}.sock
chmod-socket = 666
chdir = {{ aedir_rundir }}/uwsgi/{{ name }}
module = {{ module }}
stats = {{ aedir_rundir }}/uwsgi/{{ name }}/{{ name }}-stats.sock
manage-script-name = true
master = true
{% if processes >= 1 %}
processes = {{ processes }}
{% endif %}
{% if threads >= 1 %}
threads = {{ threads }}
enable-threads = true
{% endif %}
buffer-size = {{ buffer_size }}
harakiri = {{ harakiri }}
{% if aedir_python_sitepackages.startswith(aedir_prefix) %}
virtualenv = {{ aedir_prefix }}
{% endif  %}
log-format = %(addr) - %(user) [%(ltime)] "%(method) %(uri) %(proto)" %(status) %(size) "%(referer)" "%(uagent)"
