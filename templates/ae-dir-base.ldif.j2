dn: cn=ae-dir-{{ role }}-hosts,cn=ae,{{ aedir_suffix }}
changetype: add
aeStatus: 0
aeTicketId: {{ aedir_init_ticket_id }}
aeTag: ae-tag-init
description: AE-DIR {{ role }} hosts
objectClass: aeObject
objectClass: aeSrvGroup
cn: ae-dir-{{ role }}-hosts
aeSetupGroups: cn=ae-sys-admins,cn=ae,{{ aedir_suffix }}
aeVisibleGroups: cn=ae-sys-admins,cn=ae,{{ aedir_suffix }}
aeLoginGroups: cn=ae-sys-admins,cn=ae,{{ aedir_suffix }}
aeLogStoreGroups: cn=ae-sys-admins,cn=ae,{{ aedir_suffix }}
aeVisibleSudoers: cn=ae-sudo-sys-admins,cn=ae,{{ aedir_suffix }}

{% for host in aedir_hosts[role] %}
{% set service_fqdn = hostvars[host].get('openldap_service_fqdn',host) -%}
dn: host={{ host }},cn=ae-dir-{{ role }}-hosts,cn=ae,{{ aedir_suffix }}
changetype: add
host: {{ host }}
aeStatus: 0
aeTicketId: {{ aedir_init_ticket_id }}
aeTag: ae-tag-init
objectClass: device
objectClass: aeDevice
objectClass: aeObject
objectClass: aeHost
objectClass: ldapPublicKey
pwdPolicySubentry: cn=ppolicy-systems,cn=ae,{{ aedir_suffix }}
cn: {{ host }}
description: AE-DIR {{ role }} host {{ service_fqdn }}

{% for interface in hostvars[host]['ansible_interfaces'] if interface not in ( "lo", "tunl0") %}
{% set interface_fact = "ansible_{}".format(interface) -%}
{% if "active" in hostvars[host][interface_fact] and hostvars[host][interface_fact].active==true %}
dn: cn={{ interface }},host={{ host }},cn=ae-dir-{{ role }}-hosts,cn=ae,{{ aedir_suffix }}
changetype: add
aeStatus: 0
aeTicketId: {{ aedir_init_ticket_id }}
aeTag: ae-tag-init
cn: {{ interface }}
{% if "ipv4" in hostvars[host][interface_fact] %}
{% set interface_ipv4 = hostvars[host][interface_fact]["ipv4"]["address"] -%}
{% set interface_fqdn = lookup('dig', '{}/PTR'.format(interface_ipv4))[:-1] -%}
ipHostNumber: {{ interface_ipv4 }}
aeFqdn: {{ interface_fqdn }}
{% endif %}
{% if "macaddress" in hostvars[host][interface_fact] %}
macAddress: {{ hostvars[host][interface_fact]["macaddress"] }}
{% endif %}
objectClass: device
objectClass: aeObject
objectClass: aeDevice
objectClass: aeNwDevice
objectClass: ieee802Device
objectClass: ipHost

{% endif %}
{% endfor %}
dn: uid=ae-dir-slapd_{{ service_fqdn }},cn=ae,{{ aedir_suffix }}
changetype: add
uid: ae-dir-slapd_{{ service_fqdn }}
pwdPolicySubentry: cn=ppolicy-systems,cn=ae,{{ aedir_suffix }}
objectClass: account
objectClass: aeObject
objectClass: aeService
objectClass: pkiUser
objectClass: posixAccount
aeStatus: 0
aeTicketId: {{ aedir_init_ticket_id }}
aeTag: ae-tag-init
description: AE-DIR slapd provider {{ service_fqdn }} running on {{ host }}
homeDirectory: /home/ae-dir-slapd_{{ service_fqdn }}
cn: ae-dir-slapd_{{ service_fqdn }}
uidNumber: {{ aedir_min_gid + gid_number|length }}
gidNumber: {{ aedir_min_gid + gid_number|length }}
seeAlso: cn={{ service_fqdn }},{{ openldap_tls_cert_suffixes[0] }}
aeHost: host={{ host }},cn=ae-dir-{{ role }}-hosts,cn=ae,{{ aedir_suffix }}
{% if gid_number.append(1) -%}{% endif %}

{% endfor %}
{% endfor %}
dn: cn=ae-dir-consumer-hosts,cn=ae,{{ aedir_suffix }}
changetype: modify
add: aeRequires
aeRequires: cn=ae-dir-provider-hosts,cn=ae,{{ aedir_suffix }}
-

