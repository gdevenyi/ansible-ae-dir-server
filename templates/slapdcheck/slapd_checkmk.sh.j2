#!/bin/sh
# shell wrapper script to be used as local MRPE check with checkmk
# (see also: https://checkmk.com/integrations/mrpe)
#
# {{ ansible_managed }}

# disable use of ldap.conf
LDAPNOINIT=1
export LDAPNOINIT

# some env vars set for Python interpreter
{% for evar in aedir_python_env %}
{{ evar.name }}={{ evar.value }}
export {{ evar.name }}
{% endfor %}

{{ aedir_python }} -m slapdcheck.mrpe {{ aedir_etc }}/slapdcheck.cfg
