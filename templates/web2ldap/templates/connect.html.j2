<h2>Admin/auditor short cuts</h2>
<table>
  <tr>
    <th>Task</th>
    <th>Admin Role(s)</th>
  </tr>
  <tr>
    <td>
      <a class="CL"
         href="/web2ldap?{{ w2ldap_openldap_ldapi_uri }}/{{ w2ldap_aedir_suffix }}??sub?(&(objectClass=aeUser)(aeStatus=0)(!(userPassword=*)))?bindname=">
        Search active personal user accounts without password
      </a>
    </td>
    <td>
      &AElig; admins/auditors, Zone admins
    </td>
  </tr>
    <td>
      <a class="CL"
         href="/web2ldap?{{ w2ldap_openldap_ldapi_uri }}/{{ w2ldap_aedir_suffix }}??sub?(&(objectClass=aeGroup)(aeStatus=0)(!(member=*)))?bindname=">
        Search active groups without members
      </a>
    </td>
    <td>
      &AElig; admins/auditors, Zone admins
    </td>
  </tr>
  <tr>
    <td>
      <a class="CL"
         href="/web2ldap?{{ w2ldap_openldap_ldapi_uri }}/{{ w2ldap_aedir_suffix }}??sub?(&(objectClass=aeObject)(aeStatus=0)(aeNotAfter<={value_currenttime}))?bindname=">
        Search expired entries still active
      </a>
    </td>
    <td>
      &AElig; admins/auditors, Zone admins
    </td>
  </tr>
  <tr>
    <td>
      <a class="CL"
         href="/web2ldap?{{ w2ldap_openldap_ldapi_uri }}/{{ w2ldap_aedir_suffix }}??sub?(objectClass=msPwdResetObject)?bindname=">
        Search on-going password resets
      </a>
    </td>
    <td>
      &AElig; admins/auditors, Zone admins
    </td>
  </tr>
  <tr>
    <td>
      <a class="CL"
         href="/web2ldap/searchform?{{ w2ldap_openldap_ldapi_uri }}/{{ w2ldap_aedir_accesslog_suffix }}????bindname=">
        Search access log
      </a>
    </td>
    <td>
      &AElig; admins/auditors
    </td>
  </tr>
</table>

<h3>&AElig;-DIR remote servers</h3>
{% for role in ['provider', 'consumer'] %}
<h4>{{ role }}(s)</h4>
<table>
  <tr>
    <th>Service</th>
    <th>Host</th>
    <th>Id</th>
  </tr>
{% for host in w2ldap_aedir_hosts[role]|sort %}
{% set replica = hostvars[host].get('w2ldap_openldap_service_fqdn',host) -%}
{% set server_id = hostvars[host].get('openldap_server_id','') -%}
  <tr>
    <td>
      <a class="CL" href="/web2ldap/searchform?ldaps://{{ replica }}/{{ w2ldap_aedir_suffix }}????bindname=">{{ replica }}</a>
    </td>
{% if replica!=host %}
    <td>
      {{ host }}
    </td>
{% else %}
    <td>
      -
    </td>
{% endif %}
    <td>
      {{ server_id }}
    </td>
  </tr>
{% endfor %}
</table>

{% endfor %}

<h2>&AElig;-DIR configuration</h2>
<table>
  <tr>
    <td>Service FQDN:</td>
    <td>{{ w2ldap_openldap_service_fqdn }}</td>
  </tr>
  <tr>
    <td>Inventory hostname:</td>
    <td>{{ inventory_hostname }}</td>
  </tr>
  <tr>
    <td>base DN / search root:</td>
    <td>{{ w2ldap_aedir_suffix }}</td>
  </tr>
  <tr>
    <td>POSIX-UID number range:</td>
    <td>{{ w2ldap_aedir_min_uid }}..{{ w2ldap_aedir_max_uid }}</td>
  </tr>
  <tr>
    <td>POSIX-GID number range:</td>
    <td>{{ w2ldap_aedir_min_gid }}..{{ w2ldap_aedir_max_gid }}</td>
  </tr>
</table>
