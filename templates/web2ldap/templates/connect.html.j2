{text_error}

<form method="POST" action="/web2ldap/searchform">

  <input type="hidden" name="ldapurl" value="{{ w2ldap_openldap_ldapi_uri }}">
  <input type="hidden" name="dn" value="{{ w2ldap_aedir_suffix }}">
  <input type="hidden" name="login_search_root" value="{{ w2ldap_aedir_suffix }}">

  <fieldset>
    <legend>&AElig;-DIR login</legend>
    <table>
      <tr>
        <td>User:</td>
        <td>
          <input name="who"
                 id="login_who"
                 title="User name or bind-DN of &AElig;-DIR entry"
                 placeholder="User name or bind-DN"
                 maxlength="300"
                 size="40"
                 autofocus
                 value="">
        </td>
      </tr>
      <tr>
        <td>Password:</td>
        <td>
          <input type="password"
                 title="Password to be used for login"
                 placeholder="your secret password"
                 name="cred"
                 id="login_cred"
                 maxlength="200"
                 size="60"
                 value="">
        </td>
      </tr>
    </table>
    <input type="submit" id="login_submit" value="Login">
  </fieldset>

</form>

<h2>Documentation</h2>
<ul>
  <li>
    <a href="/web2ldap.html">web2ldap user guide</a>
  </li>
</ul>

