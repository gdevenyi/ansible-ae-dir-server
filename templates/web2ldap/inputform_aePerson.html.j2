<fieldset>
  <legend>Individual information</legend>
  <table>
    <tr>
      <td>Unique Identifier:</td>
      <td>%(uniqueIdentifier)s</td>
    </tr>
    <tr>
      <td>Employee number:</td>
      <td>%(employeeNumber)s</td>
    </tr>
    <tr>
      <td>Common Name:</td>
      <td>%(cn)s</td>
    </tr>
    <tr>
      <td>Surname:</td>
      <td>%(sn)s</td>
    </tr>
    <tr>
      <td>Given Name:</td>
      <td>%(givenName)s</td>
    </tr>
    <tr>
      <td>Title:</td>
      <td>%(title)s</td>
    </tr>
    <tr>
      <td>e-mail:</td>
      <td>%(mail)s</td>
    </tr>
    <tr>
      <td>User-ID:</td>
      <td>%(uid)s</td>
    </tr>
    <tr>
      <td>Photo:</td>
      <td>
        %(jpegPhoto)s
      </td>
    </tr>
  </table>
</fieldset>

<fieldset>
  <legend>Meta</legend>
  <table>
    <tr>
      <td>Status (aeStatus):</td>
      <td>%(aeStatus)s</td>
    </tr>
    <tr>
      <td>Intended purpose (description):</td>
      <td>%(description)s</td>
    </tr>
    <tr>
      <td>Ticket no. last change (aeTicketId):</td>
      <td>%(aeTicketId)s</td>
    </tr>
    <tr>
      <td>Validity period (aeNotBefore..aeNotAfter):</td>
      <td>from %(aeNotBefore)s until %(aeNotAfter)s</td>
    </tr>
    <tr>
      <td>Tag(s) (aeTag):</td>
      <td>%(aeTag)s</td>
    </tr>
  </table>
</fieldset>

