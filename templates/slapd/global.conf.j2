# sudoers schema, see sudoers.ldap(8)
include {{ aedir_schema_prefix }}/sudoers.schema

# automount schema
include {{ aedir_schema_prefix }}/autofs.schema

include {{ aedir_schema_prefix }}/draft-stroeder-mailboxrelatedobject.schema
